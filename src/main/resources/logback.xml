<configuration>

    <!-- Definisce appender per i log s console -->
    <appeneder name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %logger - %msg%n</pattern>
        </encoder>
    </appeneder>

    <!-- Riferimento all'appender -->
    <root level="debug">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>